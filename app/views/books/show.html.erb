
<div class="text-danger">
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <%= @book.errors.full_messages.each do |message| %>
  <li>
    <%= message %>
  </li>
  <% end %>
<% end %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

<table class="table">
  <tr>
    <td>
      <%= link_to @books.user do %>
      <%= attachment_image_tag @books.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'50x50' %><br />
      <%= @books.user.name %>
      <% end %>
    </td>
    <td>
      <%= link_to @books.title, book_path(@books.id) %>
    </td>
    <td>
      <%= @books.body %>
    </td>
    <% if @books.user == current_user %>
    <td>
      <%= link_to "Edit", edit_book_path(@books) %>
    </td>
    <td>
      <%= link_to "Destroy", book_path(@books), method: :delete %>
    </td>
    <% end %>
  </tr>
</table>
</div>
  </div>
</div>