<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header style="background-color: #333631;">
    <div class="container d-flex align-items-center">
      <a href="/"><span>Bookers</span></a>
      <ul class="ml-auto d-flex align-items-center list-unstyled">
        <% if user_signed_in? %>
        <li class="nav-item p-3">
          <%= link_to current_user do %>
            <i class="fa fa-home" aria-hidden="true"></i>Home
          <% end %>
        </li>
        <li class="nav-item p-3">
          <%= link_to "/users" do %>
            <i class="fa fa-users" aria-hidden="true"></i>Users
          <% end %>
        </li>
        <li class="nav-item p-3">
          <%= link_to "/books" do %>
            <i class="fa fa-book-open" aria-hidden="true"></i>Books
          <% end %>
        </li>
        <li class="nav-item p-3">
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt" aria-hidden="true"></i>logout
          <% end %>
        </li>
      <% else %>
        <li class="nav-item p-3">
          <%= link_to "/" do %>
            <i class="fa fa-home" aria-hidden="true"></i>Home
          <% end %>
        </li>
        <li class="nav-item p-3">
          <%= link_to about_home_path do %>
            <i class="fas fa-link" aria-hidden="true"></i>About
          <% end %>
        </li>
        <li class="nav-item p-3">
          <%= link_to new_user_registration_path do %>
            <i class="fas fa-user-plus" aria-hidden="true"></i>sign up
          <% end %>
        </li>
        <li class="nav-item p-3">
          <%= link_to new_user_session_path do %>
            <i class="fas fa-sign-in-alt" aria-hidden="true"></i>login
          <% end %>
        </li>
      <% end %>
      </ul>
    </nav>
    </div>
    </header>

    <main class="mx-auto">
      <%= yield %>
    </main>

    <footer class="d-flex justify-content-center p-5">
      <p>CopyRight Infratop.inc</p>
    </footer>

  </body>
</html>
