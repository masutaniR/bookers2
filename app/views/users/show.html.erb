<div class="container">
  <div class="row">
    <div class="col-lg-4">
<h1>User info</h1>
<table class="table">
  <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>
<p><%= link_to "Edit", edit_user_path(@user) %></p>
</div>

<div class="col-lg-8">
<h1>Books</h1>
<table class="table">
  <tr>
    <th></th>
    <th>
      <p><strong>Title</strong></p>
    </th>
    <th>
      <p><strong>Opinion</strong></p>
    </th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
    </td>
    <td>
      <%= link_to book.title, book_path(book.id) %>
    </td>
    <td>
      <%= book.opinion %>
    </td>
  </tr>
  <% end %>
</table>
</div>
