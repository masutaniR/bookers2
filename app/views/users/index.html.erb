<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h1>sidebar</h1>
    </div>

<div class="col-lg-8">
  <h1>Users</h1>
<table class="table">
  <tr>
    <th>
      <strong>image</strong>
    </th>
    <th>
      <strong>name</strong>
    </th>
    <th>
    </th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
    </td>
    <td>
      <%= user.name %>
    </td>
    <td>
      <%= link_to "Show", user_path(user.id) %>
      </td>
  </tr>
  <% end %>
</table>
</div>
